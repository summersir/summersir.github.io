(12)|min_length(2)&apos;</div><div class="line">    },{</div><div class="line">        //name &#x5B57;&#x6BB5;</div><div class="line">        name: &apos;sex&apos;,</div><div class="line">        display:&quot;&#x8BF7;&#x4F60;&#x9009;&#x62E9;&#x6027;&#x522B;{{sex}}&quot;,</div><div class="line">        // &#x9A8C;&#x8BC1;&#x6761;&#x4EF6;</div><div class="line">        rules: &apos;required&apos;</div><div class="line">    }</div><div class="line">  ],function(obj,evt){</div><div class="line">      if(obj.errors){</div><div class="line">          // &#x5224;&#x65AD;&#x662F;&#x5426;&#x9519;&#x8BEF;</div><div class="line">      }</div><div class="line">  })</div><div class="line">&lt;/script&gt;</div></pre></td></tr></table></figure>
<h2 id="&#x8BF4;&#x660E;&#x6587;&#x6863;"><a href="#&#x8BF4;&#x660E;&#x6587;&#x6863;" class="headerlink" title="&#x8BF4;&#x660E;&#x6587;&#x6863;"></a>&#x8BF4;&#x660E;&#x6587;&#x6863;</h2><blockquote>
<p>new Validator(formName, option, callback)</p>
</blockquote>
